{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "${workspaceFolder}/.vscode/command.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$msCompile"],
            "detail": "Build and run the C++ project."
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "del /Q ${workspaceFolder}/compiled/*",
            "group": "build",
            "problemMatcher": []
        }
    ]
}
